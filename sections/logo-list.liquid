<style>
  .section-{{ section.id }}.custom-marquee {
    display: flex;
    align-items: center;
    height: {{section.settings.marquee_height}}px;
    width: 100vw;
    max-width: 100%;
    overflow-x: hidden;
    background: {{ section.settings.colorBackground }}; 
    color: {{ section.settings.colorText }};
  }

  .section-{{ section.id }}.custom-marquee .track {
    display: flex;
    align-items: center;
    white-space: nowrap;
    will-change: transform;
    animation: marquee 12s linear infinite;
  }

  .section-{{ section.id }}.custom-marquee .content {
    margin-right: 40px;
    padding-left: 5px;
  }

  .section-{{ section.id }}.custom-marquee .content img {
    height: {{ section.settings.image_height | default: 40 }}px;
    width: auto;
    display: block;
  }

  @keyframes marquee {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-20%);
    }
  }
</style>

<div class="section-{{ section.id }} custom-marquee" role="region" {{ block.shopify_attributes }}>
  {%- if section.settings.link != blank -%}
    <a href="{{ section.settings.link }}">
  {%- endif -%}
    <div class="track">
      {%- for i in (1..6) -%}
        {%- for block in section.blocks -%}
          {% if block.settings.image != blank %}
            <span class="content marquee-image">
              <img src="{{ block.settings.image | img_url: 'master' }}" alt="Logo" loading="lazy" />
            </span>
          {% endif %}
        {%- endfor -%}
      {%- endfor -%}
    </div>
  {%- if section.settings.link != blank -%}
    </a>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Image Marquee",
  "settings": [
    {
      "type": "color",
      "id": "colorBackground",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "colorText",
      "label": "Text color (unused here)",
      "default": "#ffffff"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Optional link for entire marquee"
    },
    {
      "type": "range",
      "id": "marquee_height",
      "min": 24,
      "max": 200,
      "step": 2,
      "default": 60,
      "label": "Marquee height"
    },
    {
      "type": "range",
      "id": "image_height",
      "min": 10,
      "max": 150,
      "step": 2,
      "default": 40,
      "label": "Image height"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image/Logo",
      "limit": 20,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload image or logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Marquee",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
