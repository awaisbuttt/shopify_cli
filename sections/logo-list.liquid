{% schema %}
{
  "name": "Marquee Images",
  "settings": [
    {
      "type": "color",
      "id": "colorBackground",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "marquee_height",
      "min": 24,
      "max": 200,
      "step": 2,
      "default": 100,
      "label": "Marquee height"
    },
    {
      "type": "range",
      "id": "image_height",
      "min": 20,
      "max": 200,
      "step": 2,
      "default": 60,
      "label": "Image height"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt text",
          "default": "Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marquee Images",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .section-{{ section.id }}.custom-marquee {
    display: flex;
    align-items: center;
    height: {{ section.settings.marquee_height }}px;
    width: 100vw;
    max-width: 100%;
    overflow: hidden;
    background: {{ section.settings.colorBackground }};
  }

  .section-{{ section.id }}.custom-marquee .track {
    display: flex;
    align-items: center;
    white-space: nowrap;
    will-change: transform;
    animation: marquee 12s linear infinite;
  }

  .section-{{ section.id }}.custom-marquee .content {
    margin-right: 40px;
    padding-left: 5px;
  }

  .section-{{ section.id }}.custom-marquee .content img {
    height: {{ section.settings.image_height }}px;
    width: {{ section.settings.image_height }}px;
    display: block;
    object-fit: cover;
    border-radius: 50%; /* ðŸ”µ Makes the image circular */
  }

  @keyframes marquee {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }
</style>

<div class="section-{{ section.id }} custom-marquee" role="region">
  {% if section.settings.link != blank %}
    <a href="{{ section.settings.link }}">
  {% endif %}
      <div class="track">
        {% for block in section.blocks %}
          <div class="content marquee-image">
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.alt_text | escape }}">
          </div>
        {% endfor %}
        <!-- Repeat blocks to ensure seamless scrolling -->
        {% for block in section.blocks %}
          <div class="content marquee-image">
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.alt_text | escape }}">
          </div>
        {% endfor %}
      </div>
  {% if section.settings.link != blank %}
    </a>
  {% endif %}
</div>
