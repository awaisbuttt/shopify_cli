  width: 100%;
}

.logo-marquee {
  display: inline-block;
  white-space: nowrap;
  animation: scroll-left 20s linear infinite;
}

.logo-marquee img {
  height: 60px;
  margin: 0 20px;
  vertical-align: middle;
}

@keyframes scroll-left {
  0% {
    transform: translateX(100%);
  }
  100% {
    transform: translateX(-100%);
  }
}
</style>

