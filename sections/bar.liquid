<style>
  .featured-categories {
    padding: 60px 0;
    background-color: #ffffff;
  }
  
  .featured-categories__wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .featured-categories__title {
    font-size: 32px;
    font-weight: bold;
    color: #000000;
    margin: 0 0 32px 0;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 2px;
  }
  
  .featured-categories__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
  }
  
  .category-card {
    position: relative;
    height: 350px;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    transition: all 0.4s ease;
    cursor: pointer;
  }
  
  .category-card:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 15px 40px rgba(0,0,0,0.25);
  }
  
  .category-card__link {
    display: block;
    height: 100%;
    width: 100%;
    text-decoration: none;
    position: relative;
  }
  
  .category-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }
  
  .category-card:hover .category-card__image {
    transform: scale(1.1);
  }
  
  .category-card__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(0,0,0,0.3), rgba(0,0,0,0.7));
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: all 0.4s ease;
  }
  
  .category-card:hover .category-card__overlay {
    background: linear-gradient(45deg, rgba(0,0,0,0.5), rgba(0,0,0,0.8));
  }
  
  .category-card__title {
    color: #ffffff;
    font-size: 28px;
    font-weight: 900;
    text-transform: uppercase;
    text-align: center;
    text-shadow: 2px 2px 8px rgba(0,0,0,0.7);
    letter-spacing: 1px;
    transform: translateY(0);
    transition: all 0.4s ease;
    margin-bottom: 8px;
  }
  
  .category-card:hover .category-card__title {
    transform: translateY(-10px);
    font-size: 32px;
  }
  
  .category-card__subtitle {
    color: rgba(255,255,255,0.9);
    font-size: 16px;
    text-align: center;
    font-weight: 500;
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.4s ease;
    text-shadow: 1px 1px 4px rgba(0,0,0,0.5);
  }
  
  .category-card:hover .category-card__subtitle {
    opacity: 1;
    transform: translateY(0);
  }
  
  .category-card__button {
    background: linear-gradient(45deg, #ff6b6b, #ee5a24);
    color: white;
    padding: 12px 24px;
    border-radius: 25px;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
    opacity: 0;
    transform: translateY(40px);
    transition: all 0.4s ease;
    margin-top: 15px;
    border: none;
    cursor: pointer;
  }
  
  .category-card:hover .category-card__button {
    opacity: 1;
    transform: translateY(0);
  }
  
  .category-card__button:hover {
    background: linear-gradient(45deg, #ee5a24, #ff6b6b);
    transform: translateY(-2px);
  }
  
  /* Default gradient backgrounds */
  .category-card--jordan {
    background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  }
  
  .category-card--gametime {
    background: linear-gradient(135deg, #4834d4 0%, #686de0 100%);
  }
  
  .category-card--matching {
    background: linear-gradient(135deg, #00d2d3 0%, #54a0ff 100%);
  }
  
  .category-card--stylish {
    background: linear-gradient(135deg, #ff9ff3 0%, #f368e0 100%);
  }
  
  @media screen and (max-width: 1024px) {
    .featured-categories__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }
    
    .category-card {
      height: 280px;
    }
  }
  
  @media screen and (max-width: 640px) {
    .featured-categories__grid {
      grid-template-columns: 1fr;
    }
    
    .category-card {
      height: 250px;
    }
    
    .category-card__title {
      font-size: 24px;
    }
    
    .category-card:hover .category-card__title {
      font-size: 26px;
    }
    
    .featured-categories__title {
      font-size: 24px;
    }
  }
</style>

<section class="featured-categories">
  <div class="featured-categories__wrapper">
    <h2 class="featured-categories__title">{{ section.settings.title | default: 'Shop by Category' }}</h2>
    
    <div class="featured-categories__grid">
      {% for block in section.blocks %}
        <div class="category-card">
          {% assign page_url = '/pages/' | append: block.settings.custom_page %}
          {% if block.settings.custom_page != blank %}
            <a href="{{ page_url }}" class="category-card__link">
          {% elsif block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="category-card__link">
          {% else %}
            <a href="#" class="category-card__link">
          {% endif %}
            {% if block.settings.image != blank %}
              <img 
                src="{{ block.settings.image | img_url: '700x700', crop: 'center' }}" 
                alt="{{ block.settings.title }}"
                class="category-card__image"
                loading="lazy"
              >
            {% else %}
              {% case forloop.index %}
                {% when 1 %}
                  <div class="category-card--jordan" style="width: 100%; height: 100%;"></div>
                {% when 2 %}
                  <div class="category-card--gametime" style="width: 100%; height: 100%;"></div>
                {% when 3 %}
                  <div class="category-card--matching" style="width: 100%; height: 100%;"></div>
                {% when 4 %}
                  <div class="category-card--stylish" style="width: 100%; height: 100%;"></div>
                {% else %}
                  <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); width: 100%; height: 100%;"></div>
              {% endcase %}
            {% endif %}
            
            <div class="category-card__overlay">
              <div class="category-card__content">
                <h3 class="category-card__title">{{ block.settings.title | default: '' }}</h3>
                {% if block.settings.subtitle != blank %}
                  <p class="category-card__subtitle">{{ block.settings.subtitle }}</p>
                {% endif %}
                <div class="category-card__button">
                  {{ block.settings.button_text | default: 'Shop Now' }}
                </div>
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
      
      {% if section.blocks.size == 0 %}
        <!-- Default Categories -->
        <div class="category-card">
          <a href="/pages/jordan-collection" class="category-card__link">
            <div class="category-card--jordan" style="width: 100%; height: 100%;"></div>
            <div class="category-card__overlay">
              <div class="category-card__content">
                <h3 class="category-card__title">JORDAN 4RM</h3>
                <p class="category-card__subtitle">Latest Jordan Collection</p>
                <div class="category-card__button">Explore Now</div>
              </div>
            </div>
          </a>
        </div>
        
        <div class="category-card">
          <a href="/pages/gametime-kicks" class="category-card__link">
            <div class="category-card--gametime" style="width: 100%; height: 100%;"></div>
            <div class="category-card__overlay">
              <div class="category-card__content">
                <h3 class="category-card__title">GAMETIME KICKS</h3>
                <p class="category-card__subtitle">Performance Footwear</p>
                <div class="category-card__button">Shop Now</div>
              </div>
            </div>
          </a>
        </div>
        
        <div class="category-card">
          <a href="/pages/matching-sets" class="category-card__link">
            <div class="category-card--matching" style="width: 100%; height: 100%;"></div>
            <div class="category-card__overlay">
              <div class="category-card__content">
                <h3 class="category-card__title">MATCHING SETS</h3>
                <p class="category-card__subtitle">Coordinated Outfits</p>
                <div class="category-card__button">View Sets</div>
              </div>
            </div>
          </a>
        </div>
        
        <div class="category-card">
          <a href="/pages/stylish-collection" class="category-card__link">
            <div class="category-card--stylish" style="width: 100%; height: 100%;"></div>
            <div class="category-card__overlay">
              <div class="category-card__content">
                <h3 class="category-card__title">LOW KEY STYLISH</h3>
                <p class="category-card__subtitle">Minimalist Fashion</p>
                <div class="category-card__button">Discover</div>
              </div>
            </div>
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Categories",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Shop by Category"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Category Title",
          "default": "Category"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Category Subtitle"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category Image"
        },
        {
          "type": "text",
          "id": "custom_page",
          "label": "Page Handle"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Categories",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "title": "JORDAN 4RM",
            "subtitle": "Latest Collection",
            "custom_page": "jordan-collection"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "GAMETIME KICKS",
            "subtitle": "Performance Shoes",
            "custom_page": "gametime-kicks"
          }
        }
      ]
    }
  ]
}
{% endschema %}