  </div>

  <!-- Women's Section -->
  <div class="hero-section womens-section">
    <a href="{{ section.settings.womens_link | default: collections['womens-apparel'].url | default: '/collections/womens-apparel' }}">
      {% if section.settings.womens_image %}
