  <div class="hero-section mens-section">
    <a href="{{ section.settings.mens_link | default: collections['mens-apparel'].url | default: '/collections/mens-apparel' }}">
      {% if section.settings.mens_image %}
        <img src="{{ section.settings.mens_image | img_url: '800x600' }}" 
             alt="{{ section.settings.mens_title | default: 'Shop Mens Apparel' }}" 
             class="hero-image" 
             loading="lazy">
