<style>
  .featured-collection {
    padding: {{ section.settings.section_padding_top | default: 60 }}px 0 {{ section.settings.section_padding_bottom | default: 60 }}px;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }
  
  .featured-collection__wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    overflow: hidden;
  }
  
  .featured-collection__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 32px;
  }
  
  {% assign heading_size = 32 %}
  {% if section.settings.heading_size %}
    {% assign heading_size = section.settings.heading_size %}
  {% endif %}
  
  .featured-collection__title {
    font-size: {{ heading_size }}px;
    font-weight: bold;
    color: {{ section.settings.heading_color | default: '#000000' }};
    margin: 0;
  }
  
  .featured-collection__nav {
    display: flex;
    gap: 8px;
  }
  
  .nav-arrow {
    width: 40px;
    height: 40px;
    border: 1px solid #e5e7eb;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s;
    z-index: 10;
  }
  
  .nav-arrow:hover {
    border-color: #9ca3af;
    background-color: #f9fafb;
  }
  
  .nav-arrow:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
  
  .products-carousel {
    position: relative;
    overflow: hidden;
    width: 100%;
  }
  
  .products-track {
    display: flex;
    gap: 20px;
    transition: transform 0.3s ease;
    width: fit-content;
  }
  
  .product-card {
    flex: 0 0 auto;
    width: 240px;
    background: white;
    border-radius: 8px;
    overflow: hidden;
    position: relative;
    border: 2px solid #e5e7eb;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    transition: border-color 0.3s ease;
  }
  
  .product-card:hover {
    border-color: #000000;
  }
  
  .product-card__link {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
    width: 100%;
  }
  
  .product-image {
    position: relative;
    width: 100%;
    height: 240px;
    background-color: #f3f4f6;
    overflow: hidden;
  }
  
  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .sale-badge {
    position: absolute;
    top: 12px;
    left: 12px;
    background-color: {{ section.settings.sale_badge_color | default: '#dc2626' }};
    color: white;
    padding: 4px 8px;
    font-size: 12px;
    font-weight: bold;
    border-radius: 4px;
    text-transform: uppercase;
    z-index: 2;
  }
  
  .product-info {
    padding: 16px;
  }
  
  .product-title {
    font-size: 16px;
    font-weight: 600;
    color: #111827;
    margin: 0 0 4px 0;
    line-height: 1.3;
  }
  
  .product-category {
    font-size: 14px;
    color: #6b7280;
    margin: 0 0 12px 0;
  }
  
  .product-pricing {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 8px;
  }
  
  .sale-price {
    font-size: 18px;
    font-weight: bold;
    color: {{ section.settings.sale_price_color | default: '#dc2626' }};
  }
  
  .original-price {
    font-size: 16px;
    color: #9ca3af;
    text-decoration: line-through;
  }
  
  .discount-percentage {
    font-size: 14px;
    color: {{ section.settings.sale_price_color | default: '#dc2626' }};
    font-weight: 500;
  }
  
  .view-all-badge {
    position: absolute;
    bottom: 16px;
    right: 16px;
    background: rgba(0,0,0,0.8);
    color: white;
    padding: 6px 12px;
    border-radius: 15px;
    font-size: 12px;
    font-weight: 500;
    z-index: 3;
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .featured-collection__wrapper {
      padding: 0 16px;
    }
    
    .featured-collection__header {
      margin-bottom: 24px;
    }
    
    {% assign mobile_heading_size = heading_size | minus: 8 %}
    .featured-collection__title {
      font-size: {{ mobile_heading_size }}px;
    }
    
    .product-card {
      width: 200px;
    }
    
    .product-image {
      height: 200px;
    }
    
    .products-track {
      gap: 16px;
    }
    
    .product-card:active {
      border-color: #000000;
    }
  }
  
  @media (max-width: 480px) {
    .product-card {
      width: 180px;
    }
    
    .product-image {
      height: 180px;
    }
  }
</style>

<section class="featured-collection">
  <div class="featured-collection__wrapper">
    <!-- Header -->
    <div class="featured-collection__header">
      <h2 class="featured-collection__title">
        {{ section.settings.heading | default: 'Featured Collection' }}
      </h2>
      <div class="featured-collection__nav">
        <button class="nav-arrow" id="prevBtn-{{ section.id }}">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15,18 9,12 15,6"></polyline>
          </svg>
        </button>
        <button class="nav-arrow" id="nextBtn-{{ section.id }}">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9,18 15,12 9,6"></polyline>
          </svg>
        </button>
      </div>
    </div>

    <!-- Products Carousel -->
    <div class="products-carousel" id="carousel-{{ section.id }}">
      <div class="products-track" id="track-{{ section.id }}">
        {% if section.settings.collection != blank %}
          {% assign collection = collections[section.settings.collection] %}
          {% for product in collection.products limit: section.settings.products_to_show %}
            <div class="product-card">
              <!-- Link to collection page instead of individual product -->
              <a href="{{ collection.url }}" class="product-card__link">
                <div class="product-image">
                  {% if product.featured_image %}
                    <img src="{{ product.featured_image | img_url: '400x400', crop: 'center' }}" 
                         alt="{{ product.title | escape }}" 
                         loading="lazy">
                  {% else %}
                    <div style="background-color: #f3f4f6; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; color: #9ca3af;">
                      No Image
                    </div>
                  {% endif %}
                  
                  {% if product.compare_at_price > product.price %}
                    <div class="sale-badge">{{ section.settings.sale_badge_text | default: 'SALE' }}</div>
                  {% endif %}
                  
                  <div class="view-all-badge">View All</div>
                </div>
                
                <div class="product-info">
                  <h3 class="product-title">{{ product.title }}</h3>
                  <p class="product-category">{{ product.type | default: 'Product' }}</p>
                  
                  <div class="product-pricing">
                    <span class="sale-price">{{ product.price | money }}</span>
                    {% if product.compare_at_price > product.price %}
                      <span class="original-price">{{ product.compare_at_price | money }}</span>
                    {% endif %}
                  </div>
                  
                  {% if product.compare_at_price > product.price %}
                    {% assign discount = product.compare_at_price | minus: product.price %}
                    {% assign discount_percentage = discount | times: 100 | divided_by: product.compare_at_price %}
                    <div class="discount-percentage">{{ discount_percentage }}% off</div>
                  {% endif %}
                </div>
              </a>
            </div>
          {% endfor %}
        {% else %}
          <!-- Placeholder products for theme editor -->
          {% for i in (1..6) %}
            <div class="product-card">
              <a href="/collections/all" class="product-card__link">
                <div class="product-image">
                  <div style="background-color: #f3f4f6; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; color: #9ca3af;">
                    Product {{ i }}
                  </div>
                  <div class="sale-badge">SALE</div>
                  <div class="view-all-badge">View All</div>
                </div>
                <div class="product-info">
                  <h3 class="product-title">Sample Product {{ i }}</h3>
                  <p class="product-category">Shoes</p>
                  <div class="product-pricing">
                    <span class="sale-price">${{ 79 | plus: i }}9.99</span>
                    <span class="original-price">${{ 110 | plus: i }}0.00</span>
                  </div>
                  <div class="discount-percentage">2{{ i }}% off</div>
                </div>
              </a>
            </div>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.getElementById('carousel-{{ section.id }}');
    const track = document.getElementById('track-{{ section.id }}');
    const prevBtn = document.getElementById('prevBtn-{{ section.id }}');
    const nextBtn = document.getElementById('nextBtn-{{ section.id }}');
    
    if (!carousel || !track || !prevBtn || !nextBtn) return;
    
    let currentPosition = 0;
    const cardWidth = 260; // 240px + 20px gap
    const visibleCards = Math.floor(carousel.offsetWidth / cardWidth);
    const maxPosition = Math.max(0, track.children.length - visibleCards);
    
    function updateCarousel() {
      track.style.transform = `translateX(-${currentPosition * cardWidth}px)`;
      prevBtn.disabled = currentPosition === 0;
      nextBtn.disabled = currentPosition >= maxPosition;
    }
    
    prevBtn.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      if (currentPosition > 0) {
        currentPosition--;
        updateCarousel();
      }
    });
    
    nextBtn.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      if (currentPosition < maxPosition) {
        currentPosition++;
        updateCarousel();
      }
    });
    
    // Initialize
    updateCarousel();
    
    // Handle window resize
    window.addEventListener('resize', function() {
      const newVisibleCards = Math.floor(carousel.offsetWidth / cardWidth);
      const newMaxPosition = Math.max(0, track.children.length - newVisibleCards);
      if (currentPosition > newMaxPosition) {
        currentPosition = newMaxPosition;
      }
      updateCarousel();
    });
    
    // Add click tracking
    const productLinks = document.querySelectorAll('#track-{{ section.id }} .product-card__link');
    productLinks.forEach(function(link) {
      link.addEventListener('click', function() {
        console.log('Going to collection page:', link.href);
      });
    });
  });
</script>

