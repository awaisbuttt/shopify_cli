  "presets": [
    {
      "name": "Men Categories",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "category_name": "UNSTITCHED",
            "category_link": "/collections/unstitched"
          }
        },
        {
          "type": "category",
          "settings": {
            "category_name": "WESTERN",
