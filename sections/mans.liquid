<style>
  .men-categories {
    padding: {{ section.settings.section_padding_top | default: 60 }}px 0 {{ section.settings.section_padding_bottom | default: 60 }}px;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }
  
  .men-categories__wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .men-categories__title {
    font-size: {{ section.settings.heading_size | default: 28 }}px;
    font-weight: 400;
    color: {{ section.settings.heading_color | default: '#333333' }};
    margin: 0 0 50px 0;
    text-align: left;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }
  
  .categories-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
  }
  
  .category-item {
    flex: 1;
    text-align: center;
    transition: transform 0.3s ease;
  }
  
  .category-item:hover {
    transform: translateY(-8px);
  }
  
  .category-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  
  .category-image-container {
    position: relative;
    width: 220px;
    height: 220px;
    margin: 0 auto 25px;
    border-radius: 50%;
    overflow: hidden;
    background: #f8f9fa;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    transition: all 0.3s ease;
  }
  
  .category-item:hover .category-image-container {
    box-shadow: 0 8px 30px rgba(0,0,0,0.12);
    transform: scale(1.02);
  }
  
  .category-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.3s ease;
  }
  
  .category-item:hover .category-image {
    transform: scale(1.05);
  }
  
  .category-name {
    font-size: 14px;
    font-weight: 400;
    color: {{ section.settings.category_text_color | default: '#888888' }};
    text-transform: uppercase;
    letter-spacing: 1.2px;
    margin: 0;
    transition: color 0.3s ease;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }
  
  .category-item:hover .category-name {
    color: {{ section.settings.category_hover_color | default: '#333333' }};
  }
  
  /* Default category backgrounds */
  .category-unstitched {
    background: linear-gradient(135deg, #8B7355 0%, #A0956B 100%);
  }
  
  .category-western {
    background: linear-gradient(135deg, #4A5568 0%, #718096 100%);
  }
  
  .category-eastern {
    background: linear-gradient(135deg, #744210 0%, #92400E 100%);
  }
  
  .category-shoes {
    background: linear-gradient(135deg, #1F2937 0%, #374151 100%);
  }
  
  .category-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 16px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    width: 100%;
    height: 100%;
  }
  
  /* Tablet Responsive */
  @media (max-width: 1024px) {
    .categories-container {
      gap: 15px;
    }
    
    .category-image-container {
      width: 180px;
      height: 180px;
    }
    
    .men-categories__title {
      font-size: 24px;
      margin-bottom: 40px;
    }
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .categories-container {
      flex-wrap: wrap;
      justify-content: center;
      gap: 30px;
    }
    
    .category-item {
      flex: 0 0 calc(50% - 15px);
      max-width: 200px;
    }
    
    .category-image-container {
      width: 160px;
      height: 160px;
      margin-bottom: 20px;
    }
    
    .men-categories__title {
      font-size: 22px;
      margin-bottom: 35px;
    }
    
    .category-name {
      font-size: 13px;
    }
  }
  
  @media (max-width: 480px) {
    .categories-container {
      flex-direction: column;
      gap: 35px;
    }
    
    .category-item {
      flex: none;
      max-width: none;
    }
    
    .category-image-container {
      width: 200px;
      height: 200px;
    }
    
    .men-categories__wrapper {
      padding: 0 15px;
    }
  }
</style>

<section class="men-categories">
  <div class="men-categories__wrapper">
    <h2 class="men-categories__title">{{ section.settings.heading | default: 'Men' }}</h2>
    
    <div class="categories-container">
      {% for block in section.blocks %}
        <div class="category-item">
          <a href="{{ block.settings.category_link | default: '#' }}" class="category-link">
            <div class="category-image-container">
              {% if block.settings.category_image != blank %}
                <img 
                  src="{{ block.settings.category_image | img_url: '440x440', crop: 'center' }}" 
                  alt="{{ block.settings.category_name | escape }}"
                  class="category-image"
                  loading="lazy"
                >
              {% else %}
                {% assign category_slug = block.settings.category_name | downcase %}
                <div class="category-placeholder category-{{ category_slug }}">
                  {{ block.settings.category_name | default: 'Category' }}
                </div>
              {% endif %}
            </div>
            <h3 class="category-name">{{ block.settings.category_name | default: 'Category' }}</h3>
          </a>
        </div>
      {% endfor %}
      
      {% if section.blocks.size == 0 %}
        <!-- Default Categories -->
        <div class="category-item">
          <a href="/collections/unstitched" class="category-link">
            <div class="category-image-container">
              <div class="category-placeholder category-unstitched">
                UNSTITCHED
              </div>
            </div>
            <h3 class="category-name">UNSTITCHED</h3>
          </a>
        </div>
        
        <div class="category-item">
          <a href="/collections/western" class="category-link">
            <div class="category-image-container">
              <div class="category-placeholder category-western">
                WESTERN
              </div>
            </div>
            <h3 class="category-name">WESTERN</h3>
          </a>
        </div>
        
        <div class="category-item">
          <a href="/collections/eastern" class="category-link">
            <div class="category-image-container">
              <div class="category-placeholder category-eastern">
                EASTERN
              </div>
            </div>
            <h3 class="category-name">EASTERN</h3>
          </a>
        </div>
        
        <div class="category-item">
          <a href="/collections/shoes" class="category-link">
            <div class="category-image-container">
              <div class="category-placeholder category-shoes">
                SHOES
              </div>
            </div>
            <h3 class="category-name">SHOES</h3>
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

