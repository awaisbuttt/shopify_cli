
{% schema %}
{
  "name": "Three Image Columns",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1 (Bags)"
    },
    {
      "type": "text",
      "id": "title_1",
      "label": "Title 1",
      "default": "Bags"
    },
    {
      "type": "url",
      "id": "link_1",
      "label": "Link 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2 (Shoe Care)"
    },
    {
      "type": "text",
      "id": "title_2",
      "label": "Title 2",
      "default": "Shoe Care"
    },
    {
      "type": "url",
      "id": "link_2",
      "label": "Link 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3 (Belts & More)"
    },
    {
      "type": "text",
      "id": "title_3",
      "label": "Title 3",
      "default": "Belts & More"
    },
    {
      "type": "url",
      "id": "link_3",
      "label": "Link 3"
    }
  ],
  "presets": [
    {
      "name": "Three Image Columns"
    }
  ]
}
{% endschema %}

<div class="custom-columns">
  <div class="column">
    {% if section.settings.image_1 %}
      <img src="{{ section.settings.image_1 | image_url: width: 600 }}" alt="{{ section.settings.title_1 }}" />
    {% endif %}
    <div class="overlay-content">
      <h2>{{ section.settings.title_1 }}</h2>
      {% if section.settings.link_1 %}
        <a href="{{ section.settings.link_1 }}" class="btn">Shop Now</a>
      {% endif %}
    </div>
  </div>

  <div class="column">
    {% if section.settings.image_2 %}
      <img src="{{ section.settings.image_2 | image_url: width: 600 }}" alt="{{ section.settings.title_2 }}" />
    {% endif %}
    <div class="overlay-content">
      <h2>{{ section.settings.title_2 }}</h2>
      {% if section.settings.link_2 %}
        <a href="{{ section.settings.link_2 }}" class="btn">Shop Now</a>
      {% endif %}
    </div>
  </div>

  <div class="column">
    {% if section.settings.image_3 %}
      <img src="{{ section.settings.image_3 | image_url: width: 600 }}" alt="{{ section.settings.title_3 }}" />
    {% endif %}
    <div class="overlay-content">
      <h2>{{ section.settings.title_3 }}</h2>
      {% if section.settings.link_3 %}
        <a href="{{ section.settings.link_3 }}" class="btn">Shop Now</a>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .custom-columns {
    display: flex;
    gap: 10px;
    margin: 30px 0;
  }

  .custom-columns .column {
    position: relative;
    flex: 1;
    overflow: hidden;
  }

  .custom-columns img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* âœ… White text styles */
  .overlay-content {
    position: absolute;
    bottom: 20px;
    left: 20px;
    color: #ffffff !important;   /* Force white text */
    text-shadow: 0 0 5px rgba(0, 0, 0, 0.5); /* Optional: readability over images */
  }

  .overlay-content h2 {
    font-size: 24px;
    margin-bottom: 10px;
    color: #ffffff !important;  /* Heading white */
  }

  .btn {
    display: inline-block;
    padding: 10px 20px;
    color: #ffffff !important;  /* Button text white */
    background: transparent;
    border: 2px solid #ffffff;
    text-decoration: none;
    transition: 0.3s ease;
  }

  .btn:hover {
    background-color: #ffffff;
    color: #000000; /* On hover: text gets black */
  }

  @media (max-width: 768px) {
    .custom-columns {
      flex-direction: column;
    }
  }
</style>