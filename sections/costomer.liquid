<style>
  .customer-services {
    padding: {{ section.settings.section_padding_top | default: 40 }}px 0 {{ section.settings.section_padding_bottom | default: 40 }}px;
    background-color: {{ section.settings.background_color | default: '#f8f9fa' }};
  }
  
  .customer-services__wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .customer-services__title {
    font-size: {{ section.settings.heading_size | default: 28 }}px;
    font-weight: bold;
    color: #000000;
    margin: 0 0 32px 0;
    text-align: center;
  }
  
  .customer-services__grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 20px;
    align-items: center;
  }
  
  .service-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease, opacity 0.2s ease;
  }
  
  .service-item:hover {
    transform: translateY(-2px);
    opacity: 0.8;
  }
  
  .service-item__icon {
    width: 80px;
    height: 80px;
    background-color: {{ section.settings.icon_background_color | default: '#e9ecef' }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 12px;
    transition: background-color 0.2s ease;
  }
  
  .service-item:hover .service-item__icon {
    background-color: {{ section.settings.icon_hover_color | default: '#dee2e6' }};
  }
  
  .service-item__icon svg {
    width: 32px;
    height: 32px;
    stroke: {{ section.settings.icon_color | default: '#000000' }};
    stroke-width: 1.5;
  }
  
  .service-item__title {
    font-size: 14px;
    font-weight: 500;
    color: {{ section.settings.text_color | default: '#000000' }};
    margin: 0;
    line-height: 1.3;
  }
  
  /* Mobile Responsive */
  @media screen and (max-width: 1024px) {
    .customer-services__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 24px;
    }
  }
  
  @media screen and (max-width: 640px) {
    .customer-services__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
    
    .customer-services__wrapper {
      padding: 0 16px;
    }
    
    .service-item__icon {
      width: 70px;
      height: 70px;
    }
    
    .service-item__icon svg {
      width: 28px;
      height: 28px;
    }
    
    .service-item__title {
      font-size: 13px;
    }
  }
  
  @media screen and (max-width: 480px) {
    .customer-services__grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }
    
    .service-item {
      flex-direction: row;
      text-align: left;
      justify-content: flex-start;
    }
    
    .service-item__icon {
      width: 60px;
      height: 60px;
      margin-bottom: 0;
      margin-right: 16px;
      flex-shrink: 0;
    }
    
    .service-item__icon svg {
      width: 24px;
      height: 24px;
    }
  }
</style>

<section class="customer-services">
  <div class="customer-services__wrapper">
    {% if section.settings.heading != blank %}
      <h2 class="customer-services__title">{{ section.settings.heading }}</h2>
    {% endif %}
    
    <div class="customer-services__grid">
      {% for block in section.blocks %}
        <a href="{{ block.settings.service_url | default: '#' }}" class="service-item">
          <div class="service-item__icon">
            {% case block.settings.icon_type %}
              {% when 'contact' %}
                <svg viewBox="0 0 24 24" fill="none">
                  <path d="M22 12A10 10 0 1 1 12 2a10 10 0 0 1 10 10Z"/>
                  <path d="m9 12 2 2 4-4"/>
                  <path d="M8.5 14.5 16 7"/>
                </svg>
              {% when 'order' %}
                <svg viewBox="0 0 24 24" fill="none">
                  <path d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"/>
                  <path d="m3.3 7 8.7 5 8.7-5"/>
                  <path d="M12 22V12"/>
                </svg>
              {% when 'shipping' %}
                <svg viewBox="0 0 24 24" fill="none">
                  <path d="M14 18V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v11a1 1 0 0 0 1 1h2"/>
                  <path d="M15 18H9"/>
                  <path d="M19 18h2a1 1 0 0 0 1-1v-3.65a1 1 0 0 0-.22-.624l-3.48-4.35A1 1 0 0 0 17.52 8H14"/>
                  <circle cx="17" cy="18" r="2"/>
                  <circle cx="7" cy="18" r="2"/>
                </svg>
              {% when 'store' %}
                <svg viewBox="0 0 24 24" fill="none">
                  <path d="M3 21h18"/>
                  <path d="M5 21V7l8-4v18"/>
                  <path d="M19 21V11l-6-4"/>
                  <path d="M9 9v1"/>
                  <path d="M9 12v1"/>
                  <path d="M9 15v1"/>
                </svg>
              {% when 'returns' %}
                <svg viewBox="0 0 24 24" fill="none">
                  <circle cx="12" cy="12" r="10"/>
                  <path d="M12 6v6l4 2"/>
                  <path d="M16 8a6 6 0 0 0-6-6C7.58 2 6 3.58 6 6"/>
                  <path d="M9 9 6 6 3 9"/>
                </svg>
              {% when 'help' %}
                <svg viewBox="0 0 24 24" fill="none">
                  <circle cx="12" cy="12" r="10"/>
                  <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
                  <path d="M12 17h.01"/>
                </svg>
              {% else %}
                <svg viewBox="0 0 24 24" fill="none">
                  <circle cx="12" cy="12" r="10"/>
                  <path d="M12 6v6l4 2"/>
                </svg>
            {% endcase %}
          </div>
          <h3 class="service-item__title">{{ block.settings.service_title | default: 'Service' }}</h3>
        </a>
      {% endfor %}
      
      {% if section.blocks.size == 0 %}
        <!-- Default services for preview -->
        <a href="#" class="service-item">
          <div class="service-item__icon">
            <svg viewBox="0 0 24 24" fill="none">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
          </div>
          <h3 class="service-item__title">Contact Us</h3>
        </a>
        
        <a href="#" class="service-item">
          <div class="service-item__icon">
            <svg viewBox="0 0 24 24" fill="none">
              <path d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"/>
              <path d="m3.3 7 8.7 5 8.7-5"/>
              <path d="M12 22V12"/>
            </svg>
          </div>
          <h3 class="service-item__title">Order Status</h3>
        </a>
        
        <a href="#" class="service-item">
          <div class="service-item__icon">
            <svg viewBox="0 0 24 24" fill="none">
              <path d="M14 18V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v11a1 1 0 0 0 1 1h2"/>
              <path d="M15 18H9"/>
              <path d="M19 18h2a1 1 0 0 0 1-1v-3.65a1 1 0 0 0-.22-.624l-3.48-4.35A1 1 0 0 0 17.52 8H14"/>
              <circle cx="17" cy="18" r="2"/>
              <circle cx="7" cy="18" r="2"/>
            </svg>
          </div>
          <h3 class="service-item__title">Shipping Info</h3>
        </a>
        
        <a href="#" class="service-item">
          <div class="service-item__icon">
            <svg viewBox="0 0 24 24" fill="none">
              <path d="M3 21h18"/>
              <path d="M5 21V7l8-4v18"/>
              <path d="M19 21V11l-6-4"/>
              <path d="M9 9v1"/>
              <path d="M9 12v1"/>
              <path d="M9 15v1"/>
            </svg>
          </div>
          <h3 class="service-item__title">Store Pickup</h3>
        </a>
        
        <a href="#" class="service-item">
          <div class="service-item__icon">
            <svg viewBox="0 0 24 24" fill="none">
              <circle cx="12" cy="12" r="10"/>
              <path d="M12 6v6"/>
              <path d="m16 10-4 4-4-4"/>
            </svg>
          </div>
          <h3 class="service-item__title">Returns-Exchanges</h3>
        </a>
        
        <a href="#" class="service-item">
          <div class="service-item__icon">
            <svg viewBox="0 0 24 24" fill="none">
              <circle cx="12" cy="12" r="10"/>
              <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
              <path d="M12 17h.01"/>
            </svg>
          </div>
          <h3 class="service-item__title">Help</h3>
        </a>
      {% endif %}
    </div>
  </div>
</section>

