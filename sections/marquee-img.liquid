<style>
  .category-grid {
    padding: 60px 0;
    background-color: #f8f8f8;
  }

  .category-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-title {
    text-align: center;
    font-size: 36px;
    font-weight: bold;
    color: #ffffff;
    margin-bottom: 20px;
  }

  .section-subtitle {
    text-align: center;
    font-size: 16px;
    color: #ffffff;
    margin-bottom: 40px;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .category-item {
    position: relative;
    height: 400px;
    border-radius: 8px;
    overflow: hidden;
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }

  .category-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.15);
  }

  .category-item a {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .category-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .category-item:hover .category-image {
    transform: scale(1.05);
  }

  .category-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0,0,0,0.7));
    padding: 50px 20px 25px;
    color: white;
  }

  .category-title {
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 15px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
    color: #ffffff !important;
  }

  .shop-btn {
    background-color: white;
    color: #333;
    border: none;
    padding: 12px 24px;
    border-radius: 4px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .shop-btn:hover {
    background-color: #2d5a3d;
    color: white;
    transform: translateY(-2px);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .category-container {
      padding: 0 15px;
    }

    .category-item {
      height: 350px;
    }
  }

  @media (max-width: 768px) {
    .category-grid {
      padding: 40px 0;
    }

    .grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }

    .category-item {
      height: 320px;
    }

    .category-title {
      font-size: 24px;
    }

    .section-title {
      font-size: 28px;
    }
  }

  @media (max-width: 480px) {
    .grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .category-item {
      height: 350px;
    }

    .section-title {
      font-size: 24px;
    }

    .category-overlay {
      padding: 40px 15px 20px;
    }
  }
</style>

