<style>
  .category-navigation {
    padding: {{ section.settings.section_padding_top | default: 60 }}px 0 {{ section.settings.section_padding_bottom | default: 60 }}px;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }
  
  .category-navigation__wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .category-navigation__title {
    font-size: {{ section.settings.heading_size | default: 32 }}px;
    font-weight: bold;
    color: #000000;
    margin: 0 0 32px 0;
    text-align: center;
  }
  
  .category-navigation__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
  }
  
  .category-card {
    position: relative;
    height: 200px;
    overflow: hidden;
    cursor: pointer;
    transition: transform 0.3s ease;
  }
  
  .category-card:hover {
    transform: scale(1.02);
    z-index: 2;
  }
  
  .category-card__link {
    display: block;
    height: 100%;
    width: 100%;
    text-decoration: none;
    position: relative;
  }
  
  .category-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .category-card:hover .category-card__image {
    transform: scale(1.1);
  }
  
  .category-card__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.6) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .category-card__title {
    color: #ffffff;
    font-size: 28px;
    font-weight: bold;
    text-transform: uppercase;
    text-align: center;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
    letter-spacing: 2px;
    margin: 0;
  }
  
  /* Specific background colors for each category */
  .category-card--mens {
    background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
  }
  
  .category-card--womens {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  }
  
  .category-card--kids {
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  }
  
  .category-card--clothing {
    background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  }
  
  /* Mobile Responsive */
  @media screen and (max-width: 1024px) {
    .category-navigation__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2px;
    }
    
    .category-card {
      height: 180px;
    }
    
    .category-card__title {
      font-size: 24px;
    }
  }
  
  @media screen and (max-width: 640px) {
    .category-navigation__grid {
      grid-template-columns: 1fr;
      gap: 2px;
    }
    
    .category-card {
      height: 150px;
    }
    
    .category-card__title {
      font-size: 20px;
      letter-spacing: 1px;
    }
    
    .category-navigation__wrapper {
      padding: 0 16px;
    }
  }
</style>

<section class="category-navigation">
  <div class="category-navigation__wrapper">
    {% if section.settings.heading != blank %}
      <h2 class="category-navigation__title">{{ section.settings.heading }}</h2>
    {% endif %}
    
    <div class="category-navigation__grid">
      {% for block in section.blocks %}
        {% assign category_class = '' %}
        {% case block.settings.category_type %}
          {% when 'mens' %}
            {% assign category_class = 'category-card--mens' %}
          {% when 'womens' %}
            {% assign category_class = 'category-card--womens' %}
          {% when 'kids' %}
            {% assign category_class = 'category-card--kids' %}
          {% when 'clothing' %}
            {% assign category_class = 'category-card--clothing' %}
        {% endcase %}
        
        <div class="category-card {{ category_class }}">
          <a href="{{ block.settings.category_url | default: '#' }}" class="category-card__link">
            {% if block.settings.category_image != blank %}
              <img 
                src="{{ block.settings.category_image | img_url: '600x400', crop: 'center' }}" 
                alt="{{ block.settings.category_title | escape }}"
                class="category-card__image"
                loading="lazy"
              >
            {% endif %}
            
            <div class="category-card__overlay">
             
            </div>
          </a>
        </div>
      {% endfor %}
      
      {% if section.blocks.size == 0 %}
        <!-- Default categories for preview -->
        <div class="category-card category-card--mens">
          <a href="/collections/mens" class="category-card__link">
            <img src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/image-qqnl2WyYNVoVULCFgRYumLxazwzY4e.png" alt="Men's" class="category-card__image" style="object-position: 0% 50%;">
            <div class="category-card__overlay">
              <h3 class="category-card__title">MEN'S</h3>
            </div>
          </a>
        </div>
        
        <div class="category-card category-card--womens">
          <a href="/collections/womens" class="category-card__link">
            <img src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/image-qqnl2WyYNVoVULCFgRYumLxazwzY4e.png" alt="Women's" class="category-card__image" style="object-position: 25% 50%;">
            <div class="category-card__overlay">
              <h3 class="category-card__title">WOMEN'S</h3>
            </div>
          </a>
        </div>
        
        <div class="category-card category-card--kids">
          <a href="/collections/kids" class="category-card__link">
            <img src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/image-qqnl2WyYNVoVULCFgRYumLxazwzY4e.png" alt="Kids" class="category-card__image" style="object-position: 50% 50%;">
            <div class="category-card__overlay">
              <h3 class="category-card__title">KIDS'</h3>
            </div>
          </a>
        </div>
        
        <div class="category-card category-card--clothing">
          <a href="/collections/clothing-accessories" class="category-card__link">
            <img src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/image-qqnl2WyYNVoVULCFgRYumLxazwzY4e.png" alt="Clothing & Accessories" class="category-card__image" style="object-position: 75% 50%;">
            <div class="category-card__overlay">
              <h3 class="category-card__title">CLOTHING &<br>ACCESSORIES</h3>
            </div>
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Category Navigation",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading"
    },
    {
      "type": "number",
      "id": "heading_size",
      "label": "Heading size",
      "default": 32
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 60,
      "label": "Top padding"
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 60,
      "label": "Bottom padding"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "text",
          "id": "category_title",
          "label": "Category title",
          "default": "Category"
        },
        {
          "type": "select",
          "id": "category_type",
          "label": "Category type",
          "options": [
            {
              "value": "mens",
              "label": "Men's"
            },
            {
              "value": "womens", 
              "label": "Women's"
            },
            {
              "value": "kids",
              "label": "Kids'"
            },
            {
              "value": "clothing",
              "label": "Clothing & Accessories"
            }
          ],
          "default": "mens"
        },
        {
          "type": "image_picker",
          "id": "category_image",
          "label": "Category image"
        },
        {
          "type": "url",
          "id": "category_url",
          "label": "Category URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Category Navigation",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "category_title": "MEN'S",
            "category_type": "mens"
          }
        },
        {
          "type": "category",
          "settings": {
            "category_title": "WOMEN'S",
            "category_type": "womens"
          }
        },
        {
          "type": "category",
          "settings": {
            "category_title": "KIDS'",
            "category_type": "kids"
          }
        },
        {
          "type": "category",
          "settings": {
            "category_title": "CLOTHING & ACCESSORIES",
            "category_type": "clothing"
          }
        }
      ]
    }
  ]
}
{% endschema %}
